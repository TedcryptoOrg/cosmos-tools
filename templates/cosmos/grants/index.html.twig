{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row" style="padding-top: 50px">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <h2>Cosmos Grants</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_start(form, {
                            attr: {
                                'id': 'js-grant-form'
                            }
                        }) }}
                        {{ form_errors(form) }}
                        {{ form_rest(form) }}
                        <div class="form-group pull-right">
                            <button type="submit" class="btn btn-primary">List grants</button>
                            <button type="submit" class="btn btn-success" id="js-request-grant">Request revoke fee grant</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top: 20px">
            <div class="col-sm-12">
                <h2>Authz Grants</h2>
            {% if listGrants is not empty %}
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped">
                            <thead>
                                <th>Granter</th>
                                <th>Grantee</th>
                                <th>Authorization</th>
                                <th>Expire at</th>
                                <th></th>
                            </thead>
                            <tbody>
                                {% for grant in listGrants.grants %}
                                    <tr>
                                        <td>{{ grant.granter }}</td>
                                        <td>{{ grant.grantee }}</td>
                                        <td>{{ grant.authorization.type }} {{ grant.authorization.getMsg }}</td>
                                        <td>{{ grant.expiration }}</td>
                                        <td>
                                            <button
                                                    class="btn btn-danger"
                                                    id="js-revoke-btn"
                                                    data-grantee="{{ grant.grantee }}"
                                                    data-granter="{{ grant.granter }}"
                                                    data-type="{{ grant.authorization.type }}"
                                                    data-msg="{{ grant.authorization.getMsg }}"
                                            >Revoke</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h2>Fee Grants</h2>

                {% if listGrants is not empty %}
                    <div class="col-sm-12">
                        <table class="table table-striped">
                            <thead>
                            <th>Granter</th>
                            <th>Grantee</th>
                            <th>Expire at</th>
                            <th></th>
                            </thead>
                            <tbody>
                            {% for grant in listGrants.grants %}
                                <tr>
                                    <td>{{ grant.granter }}</td>
                                    <td>{{ grant.grantee }}</td>
                                    <td>{{ grant.expiration }}</td>
                                    <td>
                                        <button
                                                class="btn btn-danger"
                                                id="js-revoke-btn"
                                                data-grantee="{{ grant.grantee }}"
                                                data-granter="{{ grant.granter }}"
                                        >Revoke</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}